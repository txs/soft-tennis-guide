---
const { brands } = Astro.props;
---

<div class="brand-grid">
  {brands.map((brand: any) => (
    <div class="brand-item">
      <img src={`/images/brands/${brand.logo}`} alt={`${brand.name} logo`} />
      <span>{brand.name}</span>
    </div>
  ))}
</div>

<style>
  .brand-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
  }
  .brand-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .brand-item img {
    width: 80px;
    height: 80px;
    object-fit: contain;
  }
  .brand-item span {
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }
</style>
